#include "mode1.h"

/*
 * run mode 1 in state machine
 * input: current state
 * output: none
 * */

uint8_t counter = 0;

void mode1(TRAFFIC state)
{
	switch (state)
	{
	case INIT:
		HAL_GPIO_WritePin(GPIOA, H_RED_Pin|H_YELLOW_Pin|H_GREEN_Pin|
								 V_RED_Pin|V_YELLOW_Pin|V_GREEN_Pin, SET);
		counter = 0;
		displayHorizon(0);
		displayVertical(0);
		break;
	case RED_GREEN:
		HAL_GPIO_WritePin(GPIOA, H_RED_Pin|
								 V_GREEN_Pin, RESET);
		break;
	case INIT:
		break;
	case INIT:
		break;
	case INIT:
		break;
	default:

	}
}
