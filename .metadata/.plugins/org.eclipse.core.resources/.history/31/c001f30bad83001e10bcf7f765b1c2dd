#include "mode2.h"

MODE2_STATE state = MODE2_INIT;

void mode2()
{
	switch (state)
	{
	case MODE2_INIT:
		HAL_GPIO_WritePin(GPIOB, ENV0_Pin|ENV1_Pin|
								 ENH0_Pin|ENH1_Pin, SET);
		HAL_GPIO_WritePin(GPIOA, H_RED_Pin|V_RED_Pin, SET);
		break;
	case MODE2_INCREASE:
		// increase time duration
		break;
	case SET_TIME:
		// set time duration
		break;
	default:
		break;
	}
	if (state == MODE2_INIT)
		state = INCREASE

	// blink led red
	HAL_GPIO_TogglePin(GPIOA, V_RED_Pin|H_RED_Pin);
}
