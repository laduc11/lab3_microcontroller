#include "button.h"

int counter = PRESS_TIME;
uint8_t bFlag[MAX_BUTTON] = {0};
uint8_t bLongFlag[MAX_BUTTON] = {0};
GPIO_PinState bState[4] = {GPIO_PIN_SET, GPIO_PIN_SET, GPIO_PIN_SET, GPIO_PIN_SET};

/*
 * Check 3 nearest state of index button
 * input: index of button
 * output: state of button
 * */
uint8_t checkState()
{
	if (bState[1] == GPIO_PIN_RESET && bState[2] == GPIO_PIN_RESET && bState[3] == GPIO_PIN_RESET)
		return GPIO_PIN_RESET;
	return GPIO_PIN_SET;
}

uint8_t isPressed(uint8_t idx)
{
	if (bFlag[idx] == 1)
	{
		bFlag[idx] = 0;
		return 1;
	}
	return 0;
}

uint8_t isLongPressed(uint8_t idx)
{
	if (bLongFlag[idx] == 1)
	{
		bLongFlag[idx] = 0;
		return 1;
	}
	return 0;
}

/*
 * Get input key
 * input: none
 * output: none
 * */
void getKey()
{
	bState[1] = bState[2];
	bState[2] = bState[3];
	bState[3] = HAL_GPIO_ReadPin(BUTTON_GPIO_Port, BUTTON_Pin);
	if (checkState() == RESET)
	{
		if (bState[0] == GPIO_PIN_SET)
		{
			// Debouce button
			bFlag = 1;
			bState[0] = GPIO_PIN_RESET;
			counter = PRESS_TIME;
		}
		else
		{
			// Long pressed button
			if (counter == 0)
			{
				bLongFlag = 1;
				counter = PRESS_TIME;
			}
			else
			{
				counter--;
			}
		}
	}
	else
	{
		counter = PRESS_TIME;
	}
}
